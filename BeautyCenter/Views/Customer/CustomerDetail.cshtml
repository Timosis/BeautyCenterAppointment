    <script type="text/javascript">

        $(document).ready(function () {
            Appointments();
            Operations();
            Intallments();
            Payments();
            Chart();
        });

        function Appointments() {
            $('#tblappointment').dataTable({
                "ajax": {
                    "url": "/Customer/CustomerAppointments_Read/",
                    "dataSrc": ""
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                },
                "columns": [
                    { "data": "AppointmentDate" },
                    { "data": "Operation" },
                    {
                        "data": "Status",
                        "render": function (data, type, row) {
                            if (data == 1) {
                                return '<i class="fa fa-check-circle m--font-success"> Geldi </i>'
                            }
                            if (data == 2) {
                                return '<i class="fa fa-times-circle m--font-danger"> İptal</i>';
                            }
                            if (data == 3) {
                                return '<i class="fas fa-hourglass m--font-info"> Aktif </i>';
                            }
                        }

                    }
                ]
            });
        }

        function Operations() {
            $('#tbloperations').dataTable({
                "ajax": {
                    "url": "/Customer/CustomerOperations_Read/",
                    "dataSrc": ""
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                },
                "columns": [
                    { "data": "Date" },
                    { "data": "Department" },
                    { "data": "SessionCount" },
                    {
                        "data": "Amount",
                        "render":function(data, type, row) {
                            return data + ' <i class="fas fa-lira-sign fa-1x"></i>';
                        }
                    },
                    {
                        "data": "IsPaid",
                        "render": function (data, type, row) {
                            return (data == true) ? '<i class="fa fa-check-circle m--font-success"> Ödendi </i>' : '<i class="fa fa-minus-circle m--font-danger"> Ödenmedi</i>';
                        }
                    },
                    {
                        "data": "IsInstallment",
                        "render": function (data, type, row) {
                            return (data == true) ? '<i class="fa fa-check-circle m--font-success"> Ödendi </i>' : '<i class="fa fa-minus-circle m--font-danger"> Ödenmedi</i>';
                        }
                    }
                ]
            });
        }

        function Intallments() {
            $('#tblinstallments').dataTable({
                "ajax": {
                    "url": "/Customer/CustomerInstallment_Read/",
                    "dataSrc": ""
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                },
                "columns": [
                    { "data": "InstallmentDate" },
                    { "data": "InstallmentNumber" },
                    {
                        "data": "IsPaid",
                        "render": function (data, type, row) {
                            return (data == true) ? '<i class="fa fa-check-circle m--font-success"> Ödendi </i>' : '<i class="fa fa-minus-circle m--font-danger"> Beklemede </i>';
                        }
                    }
                ]
            });
        }

        function Payments() {
            $('#tblpayments').dataTable({
                "ajax": {
                    "url": "/Customer/CustomerPayments_Read/",
                    "dataSrc": ""
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Turkish.json"
                },
                "columns": [
                    { "data": "PaymentDate" },
                    { "data": "PaymentType" },
                    {
                        "data": "PaymentAmount",
                        "render": function (data, type, row) {
                            return data + ' <i class="fas fa-lira-sign fa-1x"></i>';
                        }
                    },
                ]
            });
        }

        function Chart() {

            am4core.useTheme(am4themes_animated);
            // Themes end

            // Create chart instance
            var chart = am4core.create("chartdiv", am4charts.XYChart);

            // Export
            chart.exporting.menu = new am4core.ExportMenu();

            // Data for both series
            var data = [{
                "year": "2009",
                "income": 23.5,
                "expenses": 21.1
            }, {
                "year": "2010",
                "income": 26.2,
                "expenses": 30.5
            }, {
                "year": "2011",
                "income": 30.1,
                "expenses": 34.9
            }, {
                "year": "2012",
                "income": 29.5,
                "expenses": 31.1
            }, {
                "year": "2013",
                "income": 30.6,
                "expenses": 28.2,
                "lineDash": "5,5",
            }, {
                "year": "2014",
                "income": 34.1,
                "expenses": 32.9,
                "strokeWidth": 1,
                "columnDash": "5,5",
                "fillOpacity": 0.2,
                "additional": "(projection)"
            }];

            /* Create axes */
            var categoryAxis = chart.xAxes.push(new am4charts.CategoryAxis());
            categoryAxis.dataFields.category = "year";
            categoryAxis.renderer.minGridDistance = 30;

            /* Create value axis */
            var valueAxis = chart.yAxes.push(new am4charts.ValueAxis());

            /* Create series */
            var columnSeries = chart.series.push(new am4charts.ColumnSeries());
            columnSeries.name = "Income";
            columnSeries.dataFields.valueY = "income";
            columnSeries.dataFields.categoryX = "year";

            columnSeries.columns.template.tooltipText = "[#fff font-size: 15px]{name} in {categoryX}:\n[/][#fff font-size: 20px]{valueY}[/] [#fff]{additional}[/]"
            columnSeries.columns.template.propertyFields.fillOpacity = "fillOpacity";
            columnSeries.columns.template.propertyFields.stroke = "stroke";
            columnSeries.columns.template.propertyFields.strokeWidth = "strokeWidth";
            columnSeries.columns.template.propertyFields.strokeDasharray = "columnDash";
            columnSeries.tooltip.label.textAlign = "middle";

            var lineSeries = chart.series.push(new am4charts.LineSeries());
            lineSeries.name = "Expenses";
            lineSeries.dataFields.valueY = "expenses";
            lineSeries.dataFields.categoryX = "year";

            lineSeries.stroke = am4core.color("#fdd400");
            lineSeries.strokeWidth = 3;
            lineSeries.propertyFields.strokeDasharray = "lineDash";
            lineSeries.tooltip.label.textAlign = "middle";

            var bullet = lineSeries.bullets.push(new am4charts.Bullet());
            bullet.fill = am4core.color("#fdd400"); // tooltips grab fill from parent by default
            bullet.tooltipText = "[#fff font-size: 15px]{name} in {categoryX}:\n[/][#fff font-size: 20px]{valueY}[/] [#fff]{additional}[/]"
            var circle = bullet.createChild(am4core.Circle);
            circle.radius = 4;
            circle.fill = am4core.color("#fff");
            circle.strokeWidth = 3;

            chart.data = data;
        }

    </script>

